        <form action="/view-contact" method="GET" id="view_contact" >
                 
                    <div class="view-items">
                        <div class="view-item">
                            <h4>Name</h>
                            <p><%= contactss.name %></p>
                        </div>
                        <div class="view-item">
                            <h4>Email</h4>
                            <p><%= contactss.email %></p>
                        </div>
                        <div class="view-item">
                            <h4>Gender</h4>
                            <p><%= contactss.gender %></p>
                        </div>
                        <div class="view-item">
                            <h4>Address</h4>
                            <p><%= contactss.address %></p>
                        </div>
                        <div class="view-item">
                            <h4>Phone</h4>
                            <p><%= contactss.phone %></p>
                        </div>
                </div>
        </form>
        
    </div>
