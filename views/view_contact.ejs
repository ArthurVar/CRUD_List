<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
                <a href="/"><i class="fas fa-angle-double-left">All Contacts</i></a>
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">View Contact</h2>
            <span class="text-light">contact information</span>
